    "s = int(input())\n",
    "if s == 1 or s == 2 or s == 4:\n",
    "    print(4)\n",
    "else:\n",
    "    res = 0\n",
    "    while True:\n",
    "        res += 1\n",
    "        if s == 4:\n",
    "            break\n",
    "        elif s%2 == 0:\n",
    "            s = int(s/2)\n",
    "        elif s%2 == 1:\n",
    "            s = 3*s + 1\n",
    "    print(res + 3)"
